function CVS_Print_default_conf
{
#|# Var to set  : None
#|#
#|# Base usage  : CVS_Print_default_conf
#|#
#|# Description : This function is used to print default CVS configuration
#|#
#|# Send Back   : console output
############ STACK_TRACE_BUILDER #####################
Function_Name="$0"
Function_PATH="${Function_PATH}/${Function_Name}"
######################################################
MSG_DISPLAY "Debug6" "Current Stack : [ ${Function_PATH} ] "

MSG_DISPLAY "Info" "Printing default values"
MSG_DISPLAY "Info" "Base_Cvs_Host       environment Value [ ${Default_CVS_HOST} ] "
MSG_DISPLAY "Info" "Base_Cvs_Port       environment Value [ ${Default_CVS_PORT} ] "
MSG_DISPLAY "Info" "Base_Cvs_Username   environment Value [ ${Default_CVS_USERNAME} ] "
MSG_DISPLAY "Info" "Base_Cvs_Repository environment Value [ ${Default_CVS_REPOSITORY} ] "
MSG_DISPLAY "Info" "Base_Cvs_Project    environment Value [ ${Default_CVS_PROJECT} ] "
MSG_DISPLAY "Info" "Base_Cvs_Branch     environment Value [ ${Default_CVS_BRANCH} ] "
MSG_DISPLAY "Info" "Base_Cvs_TYPE       environment Value [ ${Default_CVS_TYPE} ] "
User_Hit_a_key
############### Stack_TRACE_BUILDER ################
Function_PATH="$( dirname ${Function_PATH} )"
####################################################
}

