function Configure_NetConsole
{
#|# Var to set  : None
#|#             : Use this var to set 
#|#             : Use this var to set 
#|# ${1}        : Use this var to set [  ]                
#|# ${2}        : Use this var to set [  ]               
#|#
#|# Base usage  : None
#|#
#|# Description : None
#|#
#|# Send Back   : None
############ STACK_TRACE_BUILDER #####################
Function_Name="$0"
Function_PATH="${Function_PATH}/${Function_Name}"
######################################################
MSG_DISPLAY "Debug6" "Current Stack : [ ${Function_PATH} ] "

NetConsolePort="${1}"
SyslogServerAddr="${2}"
SysLogPort="${3}"
SysLogMacAddr="${4}"

Empty_Var_Control "${NetConsolePort}"   "NetConsolePort"   "ErrorN" "2" " Net Console port is a mandatory parameter "
Empty_Var_Control "${SyslogServerAddr}" "SyslogServerAddr" "ErrorN" "2" " Syslog serveur ip aresse is a mandatory parameter "
Empty_Var_Control "${SysLogPort}"       "SysLogPort"       "ErrorN" "2" " syslog port is a mandatory parameter "
Empty_Var_Control "${SysLogMacAddr}"    "SysLogMacAddr"    "ErrorN" "2" " syslog Mac adresse is a mandatory parameter "

File_Backup "${NetConsoleConfig}"
FileneconsoleConfigRedirector=" >> ${NetConsoleConfig}"

printf -- "" > ${NetConsoleConfig}

eval printf -- "# This is the configuration file for the netconsole service.  By starting"       ${FileneconsoleConfigRedirector}
eval printf -- "# this service you allow a remote syslog daemon to record console output"        ${FileneconsoleConfigRedirector}
eval printf -- "# from this system."                                                             ${FileneconsoleConfigRedirector}
eval printf -- ""                                                                                ${FileneconsoleConfigRedirector} 
eval printf -- "# The local port number that the netconsole module will use"                     ${FileneconsoleConfigRedirector}
eval printf -- "LOCALPORT=${NetConsolePort}"                                                     ${FileneconsoleConfigRedirector}
eval printf -- ""                                                                                ${FileneconsoleConfigRedirector}
eval printf -- "# The ethernet device to send console messages out of (only set this if it"      ${FileneconsoleConfigRedirector}
eval printf -- "# can't be automatically determined)"                                            ${FileneconsoleConfigRedirector}
eval printf -- "# DEV="                                                                          ${FileneconsoleConfigRedirector}
eval printf -- ""                                                                                ${FileneconsoleConfigRedirector}
eval printf -- "# The IP address of the remote syslog server to send messages to"                ${FileneconsoleConfigRedirector}
eval printf -- "SYSLOGADDR=${SyslogServerAddr}"                                                  ${FileneconsoleConfigRedirector}
eval printf -- ""                                                                                ${FileneconsoleConfigRedirector}
eval printf -- "# The listening port of the remote syslog daemon"                                ${FileneconsoleConfigRedirector}
eval printf -- "SYSLOGPORT=${SysLogPort}"                                                        ${FileneconsoleConfigRedirector}
eval printf -- ""                                                                                ${FileneconsoleConfigRedirector}
eval printf -- "# The MAC address of the remote syslog server (only set this if it can t"        ${FileneconsoleConfigRedirector}
eval printf -- "# be automatically determined)"                                                  ${FileneconsoleConfigRedirector}
eval printf -- "SYSLOGMACADDR=${SysLogMacAddr}"                                                  ${FileneconsoleConfigRedirector}


############### Stack_TRACE_BUILDER ################
Function_PATH="$( dirname ${Function_PATH} )"
#################################################### 
}





