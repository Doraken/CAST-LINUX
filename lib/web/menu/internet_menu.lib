function Get_On_Internet                              # Internet_Main_Menu
{
#|# Var to set  : None
#|#
#|# Base usage  : Get_On_Internet
#|#
#|# Description : This function create menu for getting files on internet
#|#
#|# Send Back   : Menu
############ STACK_TRACE_BUILDER #####################
Function_Name="$0"
Function_PATH="${Function_PATH}/${Function_Name}"
######################################################
MSG_DISPLAY "Debug6" "Current Stack : [ ${Function_PATH} ] "

Internet_Http_Get "My_pkg_URL" "My_pkg" "My_pkg_repository"
set -A Configuration_install_pkg 'Menu Configuration:' \
     'CHANGE URL_to_GET=[${URL_to_GET}]'               \
     'CHANGE Output_Directory=[${Output_Directory}]'   \
     'Get_File_On_Internet'

############### Stack_TRACE_BUILDER ################
Function_PATH="$( dirname ${Function_PATH} )"
####################################################
}

function Get_File_On_Internet
{
#|# Var to set  : None
#|#
#|# Base usage  : Get_On_Internet
#|#
#|# Description : This function is an inteface for Internet_Http_Get used by
#|#               Get_On_Internet
#|#
#|# Send Back   : Call to function
############ STACK_TRACE_BUILDER #####################
Function_Name="$0"
Function_PATH="${Function_PATH}/${Function_Name}"
######################################################
MSG_DISPLAY "Debug6" "Current Stack : [ ${Function_PATH} ] "

Internet_Http_Get "${URL_to_GET}" "" "${Output_Directory}"

URL_to_GET=""
Output_Directory=""
############### Stack_TRACE_BUILDER ################
Function_PATH="$( dirname ${Function_PATH} )"
####################################################
}

